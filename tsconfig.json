{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "lib": ["DOM", "ES2020"],

    "declaration": true,
    "declarationMap": true,

    "outDir": "dist",
    "rootDir": "src",

    "strict": true,
    "moduleResolution": "Bundler",
    "esModuleInterop": true,

    "skipLibCheck": true
  },
  "include": ["src"]
}
